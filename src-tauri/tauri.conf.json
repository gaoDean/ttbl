{
	"build": {
		"beforeBuildCommand": "yarn build",
		"beforeDevCommand": "yarn dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "ttbl",
		"version": "1.11.0"
	},
	"tauri": {
		"allowlist": {
			"fs": {
				"all": true,
				"scope": ["$DATA/**"]
			},
			"http": {
				"all": true,
				"request": true
			},
			"notification": { "all": true },
			"path": { "all": true },
			"window": {
        "show": true,
        "hide": true,
				"startDragging": true,
				"close": true,
        "setFocus": true
      }
		},
		"bundle": {
			"active": true,
			"category": "Productivity",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
	  ],
	  "identifier": "ttbl",
	  "longDescription": "",
	  "macOS": {
		  "entitlements": null,
		  "exceptionDomain": "",
		  "frameworks": [],
		  "providerShortName": null,
		  "signingIdentity": null
	  },
	  "resources": [],
	  "shortDescription": "",
	  "targets": "dmg",
	  "windows": {
		  "certificateThumbprint": null,
		  "digestAlgorithm": "sha256",
		  "timestampUrl": ""
	  }
		},
		"systemTray": {
			"iconPath": "icons/tray-icon.png",
			"iconAsTemplate": true
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"visible": false,
				"skipTaskbar": true,
				"fullscreen": false,
				"resizable": true,
				"focus": false,
				"decorations": false,
				"title": "ttbl",
				"height": 600,
				"width": 800
			}
		]
	}
}
